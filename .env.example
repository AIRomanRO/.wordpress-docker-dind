# ============================================================================
# DOCKER-IN-DOCKER CONFIGURATION
# ============================================================================
# These settings are used by docker-compose-dind.yml for the DinD setup

# 1/ Project Configuration ------------------------------------------------
# Project name - used for container naming and network prefixes
COMPOSE_PROJECT_NAME=wordpress

# 2/ DinD Container Settings ----------------------------------------------
# Docker-in-Docker container configuration
DIND_CONTAINER_NAME=wordpress-dind-host
DIND_IMAGE_TAG=latest
DIND_NETWORK_SUBNET=172.19.0.0/16

# 3/ Port Configuration ---------------------------------------------------
# Docker daemon port (exposed to host for CLI tool communication)
DOCKER_DAEMON_PORT=2375

# WordPress instance port range (supports up to 100 instances)
WP_INSTANCE_PORT_RANGE_START=8000
WP_INSTANCE_PORT_RANGE_END=8099

# phpMyAdmin web interface port
PHPMYADMIN_PORT=8080

# MailCatcher ports for email testing
MAIL_CATCHER_HTTP_PORT=1080
MAIL_CATCHER_SMTP_PORT=1025

# 4/ Default Instance Configuration ---------------------------------------
# Default versions used when creating new WordPress instances
# MySQL versions: 56 (5.6), 57 (5.7), 80 (8.0)
DEFAULT_MYSQL_VERSION=80

# PHP versions: 74 (7.4), 80 (8.0), 81 (8.1), 82 (8.2), 83 (8.3)
DEFAULT_PHP_VERSION=83

# Web server: nginx or apache
DEFAULT_WEBSERVER=nginx

# Default database configuration
DEFAULT_DB_NAME=wordpress
DEFAULT_DB_USER=wordpress

# 5/ WordPress Installation Defaults --------------------------------------
# Default settings used by install-wordpress.sh script
WORDPRESS_WEBSITE_TITLE="My WordPress Site"
WORDPRESS_ADMIN_USER="admin"
WORDPRESS_ADMIN_PASSWORD="change-this-password"
WORDPRESS_ADMIN_EMAIL="admin@example.com"
WORDPRESS_LOCALE=en_US

# ============================================================================
# LEGACY STANDALONE WORDPRESS CONFIGURATION
# ============================================================================
# These settings are used by docker-compose.yml (standalone setup)
# Not used by Docker-in-Docker setup

# Database Configuration --------------------------------------------------
DATABASE_PASSWORD=password
DATABASE_USER=root
WORDPRESS_DB_HOST=database
WORDPRESS_DB_USER=root
WORDPRESS_DB_PASSWORD=password

# WordPress URL Configuration ---------------------------------------------
# Change 0.0.0.0 to your server's IP address (e.g., 192.168.1.100)
WORDPRESS_WEBSITE_URL="http://0.0.0.0"
WORDPRESS_WEBSITE_URL_WITHOUT_HTTP=0.0.0.0
WORDPRESS_WEBSITE_POST_URL_STRUCTURE="/blog/%postname%/"

# Online Deployment (nginx-proxy) -----------------------------------------
WORDPRESS_WEBSITE_URL_WITHOUT_WWW=example.com
PHPMYADMIN_WEBSITE_URL_WITHOUT_HTTP=sql.example.com

# Software Versions -------------------------------------------------------
WORDPRESS_VERSION=5.6-php8.0-fpm-alpine
MARIADB_VERSION=latest
PHPMYADMIN_VERSION=fpm-alpine

# Volumes -----------------------------------------------------------------
WORDPRESS_DATA_DIR=./wordpress

# Logs --------------------------------------------------------------------
NGINX_LOG_DIR=./logs/nginx
MYSQL_LOG_DIR=./logs/mysql
PHP_LOG_DIR=./logs/php

# Healthcheck -------------------------------------------------------------
WAIT_BEFORE_HOSTS=2
WAIT_AFTER_HOSTS=2
WAIT_HOSTS_TIMEOUT=300
WAIT_SLEEP_INTERVAL=5
WAIT_HOST_CONNECT_TIMEOUT=5